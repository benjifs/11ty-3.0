---
layout: layouts/default.njk
eleventyExcludeFromCollections: true
---
<h1>feed <a href="/feed.xml"><small>rss</small></a></h1>
<section>
	{% if collections.feed | length %}
	<h2>Latest posts</h2>
		{% for post in collections.feed | reverse %}
		<article>
			{% if post.title %}<h2>{{ post.title }}</h2>{% endif %}
			{{ post.content | safe }}
			<footer>
				<a href="{{ post.url }}">{{ post.date }}</a>
			</footer>
		</article>
		{% endfor %}
	{% else %}
	<article>
		<p>No content found</p>
	</article>
	{% endif %}
</section>
